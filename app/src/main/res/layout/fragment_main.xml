<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="MainViewModel"
            type="org.devdias.simpleappnyt.viewmodel.MainViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MainFragment"
        android:background="@color/black">
        <TextView
            android:id="@+id/titleBarMainFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:text="@string/app_name" />
        <ScrollView
            android:scrollIndicators="end"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:background="@drawable/background_half_round_white"
            android:layout_below="@+id/titleBarMainFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewTimesWire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black"
                    android:onClick="@{()->MainViewModel.getTimesWire()}"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Times Wire API" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewBooks"
                    android:layout_below="@+id/cardViewTimesWire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->MainViewModel.getBooks()}"
                    app:cardBackgroundColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Books API" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewArticles"
                    android:layout_below="@+id/cardViewBooks"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->MainViewModel.getArticle()}"
                    android:layout_marginStart="10dp"
                    app:cardBackgroundColor="@color/black"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:padding="15dp"
                            android:layout_margin="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Most Popular API" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewArchive"
                    android:layout_below="@+id/cardViewArticles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:onClick="@{()->MainViewModel.getArchive()}"
                    app:cardBackgroundColor="@color/black"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Archive API" />

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewSearchArticles"
                    android:layout_below="@+id/cardViewArticles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black"
                    android:onClick="@{()->MainViewModel.getSearchArticles()}"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Article Search API" />
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewMovieReviews"
                    android:layout_below="@+id/cardViewSearchArticles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black"
                    android:onClick="@{()->MainViewModel.getMovieReviews()}"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:layout_margin="5dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Movie Reviews API" />
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardViewTopStories"
                    android:layout_below="@+id/cardViewMovieReviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/black"
                    android:onClick="@{()->MainViewModel.getTopStories()}"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_margin="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="18sp"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:text="Top Stories API" />
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


        </ScrollView>
    </RelativeLayout>
</layout>